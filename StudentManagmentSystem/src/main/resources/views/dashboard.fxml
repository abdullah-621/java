<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.student.controller.DashboardController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #2196F3; -fx-padding: 15px;">
            <Label text="Student Management Dashboard" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <Region HBox.hgrow="ALWAYS" />
            <Button onAction="#handleLogout" style="-fx-background-color: #f44336; -fx-text-fill: white;" text="Logout" />
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" minHeight="650.0" minWidth="1150.0" prefHeight="650.0" prefWidth="1150.0" spacing="30.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <Label text="Welcome to Student Management System">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <GridPane alignment="CENTER" hgap="20.0" vgap="20.0">

                <!-- Row 1 -->
                <Button onAction="#handleAddStudent" prefHeight="80.0" prefWidth="200.0" 
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px;" 
                        text="Add Student" GridPane.columnIndex="0" GridPane.rowIndex="0" />

                <Button onAction="#handleUpdateStudent" prefHeight="80.0" prefWidth="200.0" 
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 16px;" 
                        text="Update Student" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Button onAction="#handleAllStudents" prefHeight="80.0" prefWidth="200.0" 
                        style="-fx-background-color: #9C27B0; -fx-text-fill: white; -fx-font-size: 16px;" 
                        text="All Students" GridPane.columnIndex="2" GridPane.rowIndex="0" />

                <!-- Row 2 -->
                <Button onAction="#handleDeleteStudent" prefHeight="80.0" prefWidth="200.0" 
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 16px;" 
                        text="Delete Student" GridPane.columnIndex="0" GridPane.rowIndex="1" />

                <Button onAction="#handleSearchStudent" prefHeight="80.0" prefWidth="200.0" 
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-size: 16px;" 
                        text="Search Student" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>

            </GridPane>

            <Label fx:id="studentCountLabel" text="Total Students: 0">
                <font>
                    <Font size="14.0" />
                </font>
            </Label>

        </VBox>
    </center>

</BorderPane>