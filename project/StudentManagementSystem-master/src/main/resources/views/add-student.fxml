<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1150.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.student.controller.AddStudentController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #4CAF50; -fx-padding: 15px;">
            <Button onAction="#handleBack" style="-fx-background-color: white; -fx-text-fill: #4CAF50;" text="â† Back" />
            <Label text="Add New Student" textFill="WHITE">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
        </HBox>
    </top>

    <!-- Center Content -->
    <center>
        <VBox alignment="CENTER" minHeight="700.0" minWidth="1150.0" prefHeight="700.0" prefWidth="1280.0" spacing="20.0">
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>

            <VBox maxWidth="500.0" spacing="15.0">

                <Label text="Student ID:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="idField" promptText="Enter Student ID (e.g., 2024000000100)" />

                <Label text="Student Name:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="nameField" promptText="Enter Full Name" />

                <Label text="Email:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="emailField" promptText="Enter Email Address" />

                <Label text="Phone:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="phoneField" promptText="Enter Phone Number" />

                <Label text="Department:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <ComboBox fx:id="departmentCombo" prefWidth="500.0" promptText="Select Department" />

                <Label text="Batch:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="batchField" promptText="Enter Batch Number (e.g., 62, 65, 66)" />

                <Label text="Semester:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="semesterField" promptText="Enter Semester (e.g., 1st, 2nd, 3rd)" />

                <Label text="CGPA:">
                    <font>
                        <Font name="System Bold" size="14.0" />
                    </font>
                </Label>
                <TextField fx:id="cgpaField" promptText="Enter CGPA (0.0 - 4.0)" />

                <Label fx:id="messageLabel" textFill="GREEN" wrapText="true">
                    <font>
                        <Font name="System Bold" size="13.0" />
                    </font>
                </Label>

                <HBox alignment="CENTER" spacing="15.0">
                    <Button onAction="#handleAddStudent" prefWidth="120.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px;" text="Add Student" />
                    <Button onAction="#handleClear" prefWidth="120.0" style="-fx-font-size: 14px;" text="Clear" />
                </HBox>

            </VBox>

        </VBox>
    </center>

</BorderPane>
